        <!-- QR code statico -->
        <control type="image" id="300">
            <left>80</left>
            <top>120</top>
            <width>360</width>
            <height>360</height>
            <aspectratio>keep</aspectratio>
            <texture>api.png</texture>
        </control>

        <!-- Messaggio informativo -->
        <control type="textbox" id="200">
            <left>460</left>
            <top>120</top>
            <width>700</width>
            <height>360</height>
            <font>font13</font>
            <align>left</align>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <scroll>true</scroll>
        </control>

        <!-- Pulsante: Visualizza QR -->
        <control type="button" id="400">
            <left>420</left>
            <top>520</top>
            <width>360</width>
            <height>50</height>
            <label>Visualizza QR</label>
            <font>font13</font>
            <align>center</align>
            <textoffsetx>10</textoffsetx>
            <texturefocus border="12" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
            <texturenofocus border="12">button-nofocus.png</texturenofocus>
        </control>

        <!-- Pulsante: Conferma -->
        <control type="button" id="500">
            <left>800</left>
            <top>520</top>
            <width>360</width>
            <height>50</height>
            <label>Ho preso visione, continua.</label>
            <font>font13</font>
            <align>center</align>
            <textoffsetx>10</textoffsetx>
            <texturefocus border="12" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
            <texturenofocus border="12">button-nofocus.png</texturenofocus>
        </control>

    </controls>
