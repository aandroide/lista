<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <coordinates>
        <left>502</left>
        <top>345</top>
    </coordinates>
    <controls>
        <!-- Animazioni -->
        <animation type="WindowOpen" reversible="false">
            <effect type="zoom" start="80" end="100" center="960,540" delay="160" tween="back" time="240" />
            <effect type="fade" delay="160" end="100" time="240" />
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
            <effect type="fade" start="100" end="0" time="240" />
        </animation>
        
        <!-- Sfondo semi-trasparente -->
        <control type="image">
            <left>-1920</left>
            <top>-1080</top>
            <width>5760</width>
            <height>3240</height>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <texture colordiffuse="C2FFFFFF">black.png</texture>
        </control>
        
        <!-- Contenitore principale -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>915</width>
            <height>380</height>
            <texture border="2">dialog_bg.png</texture>
        </control>
        
        <!-- Barra del titolo -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>915</width>
            <height>70</height>
            <texture colordiffuse="FF12B2E7" border="2">white.png</texture>
        </control>
        
        <!-- Titolo finestra -->
        <control type="label">
            <textoffsetx>70</textoffsetx>
            <left>0</left>
            <top>0</top>
            <width>915</width>
            <height>70</height>
            <font>font20_title</font>
            <label>ISTRUZIONI OBBLIGATORIE</label>
            <align>center</align>
            <aligny>center</aligny>
            <shadowcolor>FF000000</shadowcolor>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        
        <!-- QR Code -->
        <control type="image" id="300">
            <left>30</left>
            <top>75</top>
            <width>300</width>
            <height>300</height>
            <aspectratio aligny="center" align="center">keep</aspectratio>
        </control>
        
        <!-- Messaggio di istruzioni -->
        <control type="textbox" id="200">
            <left>360</left>
            <top>85</top>
            <width>545</width>
            <height>220</height>
            <font>font12_title</font>
            <align>left</align>
            <aligny>top</aligny>
            <shadowcolor>FF000000</shadowcolor>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        
        <!-- Pulsante Visualizza QR Code -->
        <control type="button" id="400">
            <left>360</left>
            <top>310</top>
            <width>250</width>
            <height>50</height>
            <font>font12_title</font>
            <textcolor>FFFFFFFF</textcolor>
            <textoffsetx>10</textoffsetx>
            <label>Visualizza QR Code</label>
            <align>center</align>
            <aligny>center</aligny>
            <texturefocus border="40" colordiffuse="FF12B2E7">button_focus.png</texturefocus>
            <texturenofocus border="40">button_nofocus.png</texturenofocus>
        </control>
        
        <!-- Pulsante Ok, Fatto -->
        <control type="button" id="500">
            <left>620</left>
            <top>310</top>
            <width>250</width>
            <height>50</height>
            <font>font12_title</font>
            <textcolor>FFFFFFFF</textcolor>
            <textoffsetx>10</textoffsetx>
            <label>Ok, Fatto</label>
            <align>center</align>
            <aligny>center</aligny>
            <texturefocus border="40" colordiffuse="FF12B2E7">button_focus.png</texturefocus>
            <texturenofocus border="40">button_nofocus.png</texturenofocus>
        </control>
    </controls>
</window>
