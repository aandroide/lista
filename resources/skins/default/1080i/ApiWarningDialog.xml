<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="13001">
    <coordinates>
        <left>360</left>
        <top>240</top>
    </coordinates>

    <controls>

        <!-- Sfondo -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1200</width>
            <height>640</height>
            <texture border="2">dialog-bg.png</texture>
        </control>

        <!-- Barra superiore azzurra -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1200</width>
            <height>80</height>
            <texture colordiffuse="FF12B2E7" border="2">white.png</texture>
        </control>

        <!-- Titolo -->
        <control type="label">
            <left>0</left>
            <top>0</top>
            <width>1200</width>
            <height>80</height>
            <label>LEGGERE ATTENTAMENTE PRIMA DI CONTINUARE</label>
            <font>font30_title</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
