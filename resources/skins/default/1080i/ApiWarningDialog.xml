<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <coordinates>
        <left>450</left>
        <top>270</top>
    </coordinates>
    <controls>
        <!-- Animazioni -->
        <animation type="WindowOpen" reversible="false">
            <effect type="zoom" start="80" end="100" center="960,540" delay="160" tween="back" time="240" />
            <effect type="fade" delay="160" end="100" time="240" />
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
            <effect type="fade" start="100" end="0" time="240" />
        </animation>

        <!-- Sfondo dialog -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1050</width>
            <height>540</height>
            <texture border="2">dialog_bg.png</texture>
        </control>

        <!-- Barra titolo -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1050</width>
            <height>70</height>
            <texture colordiffuse="FF12B2E7" border="2">white.png</texture>
        </control>

        <!-- Titolo testo -->
        <control type="label">
            <left>0</left>
            <top>0</top>
            <width>1050</width>
            <height>70</height>
            <font>font20_title</font>
            <label>LEGGERE ATTENTAMENTE PRIMA DI CONTINUARE</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>FF000000</shadowcolor>
        </control>

        <!-- QR Code -->
        <control type="image" id="300">
            <left>30</left>
            <top>85</top>
            <width>300</width>
            <height>300</height>
            <aspectratio>keep</aspectratio>
        </control>

        <!-- Testo descrizione -->
        <control type="textbox" id="200">
            <left>360</left>
            <top>85</top>
            <width>660</width>
            <height>310</height>
            <font>font12_title</font>
            <align>left</align>
            <aligny>top</aligny>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>FF000000</shadowcolor>
        </control>

        <!-- Bottone Visualizza QR -->
        <control type="button" id="400">
            <left>360</left>
            <top>420</top>
            <width>320</width>
            <height>50</height>
            <font>font12_title</font>
            <label>Visualizza QR Code/Link</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
            <textoffsetx>10</textoffsetx>
            <texturefocus border="40" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
            <texturenofocus border="40">button-nofocus.png</texturenofocus>
        </control>

        <!-- Bottone continua -->
        <control type="button" id="500">
            <left>700</left>
            <top>420</top>
            <width>320</width>
            <height>50</height>
            <font>font12_title</font>
            <label>Ho preso visione, continua.</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
            <textoffsetx>10</textoffsetx>
            <texturefocus border="40" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
            <texturenofocus border="40">button-nofocus.png</texturenofocus>
        </control>
    </controls>
</window>
