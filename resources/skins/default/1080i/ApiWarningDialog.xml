<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <controls>
        <!-- Animazioni -->
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" end="100" time="240" />
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="240" />
        </animation>
        
        <!-- Sfondo nero -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black.png</texture>
        </control>
        
        <!-- Titolo finestra -->
        <control type="label" id="100">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>50</height>
            <font>font40_title</font>
            <label>ISTRUZIONI OBBLIGATORIE</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        
        <!-- Linea separatrice -->
        <control type="image">
            <left>20</left>
            <top>60</top>
            <width>1880</width>
            <height>2</height>
            <texture>white.png</texture>
        </control>
        
        <!-- Contenitore principale con scroll -->
        <control type="group">
            <left>0</left>
            <top>70</top>
            <width>1920</width>
            <height>1010</height>
            
            <!-- Area testo scorrevole -->
            <control type="textbox" id="200">
                <left>20</left>
                <top>0</top>
                <width>1880</width>
                <height>1010</height>
                <font>font30</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>left</align>
                <pagecontrol>201</pagecontrol>
            </control>
            
            <!-- Scrollbar -->
            <control type="scrollbar" id="201">
                <left>1900</left>
                <top>0</top>
                <width>20</width>
                <height>1010</height>
                <orientation>vertical</orientation>
            </control>
        </control>
    </controls>
</window>
