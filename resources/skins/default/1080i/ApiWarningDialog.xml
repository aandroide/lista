<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <controls>
        <!-- Animazioni -->
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" end="100" time="240" />
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="240" />
        </animation>
        
        <!-- Sfondo nero -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black.png</texture>
        </control>
        
        <!-- Titolo finestra -->
        <control type="label" id="100">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>50</height>
            <font>font40_title</font>
            <label>ISTRUZIONI OBBLIGATORIE</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
        </control>
        
        <!-- Linea separatrice -->
        <control type="image">
            <left>20</left>
            <top>60</top>
            <width>1880</width>
            <height>2</height>
            <texture>white.png</texture>
        </control>
        
        <!-- Contenitore principale -->
        <control type="group">
            <left>0</left>
            <top>70</top>
            <width>1920</width>
            <height>1010</height>
            
            <!-- QR Code -->
            <control type="image" id="300">
                <left>560</left>
                <top>100</top>
                <width>300</width>
                <height>300</height>
                <aspectratio>keep</aspectratio>
            </control>
            
            <!-- Messaggio di istruzioni -->
            <control type="textbox" id="200">
                <left>460</left>
                <top>420</top>
                <width>1000</width>
                <height>300</height>
                <font>font30</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
            </control>
            
            <!-- Etichetta QR Code -->
            <control type="label">
                <left>560</left>
                <top>420</top>
                <width>300</width>
                <height>30</height>
                <font>font22</font>
                <textcolor>FFAAAAAA</textcolor>
                <label>Inquadra con il tuo smartphone</label>
                <align>center</align>
            </control>
            
            <!-- Pulsante Visualizza QR Code -->
            <control type="button" id="400">
                <left>560</left>
                <top>500</top>
                <width>300</width>
                <height>50</height>
                <label>Visualizza QR Code</label>
                <font>font30</font>
                <textcolor>FFFFFFFF</textcolor>
                <texturenofocus>button_nofocus.png</texturenofocus>
                <texturefocus>button_focus.png</texturefocus>
            </control>
        </control>
    </controls>
</window>
