<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
  <coordinates>
    <left>390</left>
    <top>255</top>
  </coordinates>
  <controls>

    <!-- Animazioni apertura/chiusura -->
    <animation type="WindowOpen" reversible="false">
      <effect type="zoom" start="80" end="100" center="960,540" delay="160" tween="back" time="240" />
      <effect type="fade" delay="160" end="100" time="240" />
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="zoom" start="100" end="80" center="960,540" easing="in" tween="back" time="240" />
      <effect type="fade" start="100" end="0" time="240" />
    </animation>

    <!-- Sfondo dialog -->
    <control type="image">
      <left>0</left>
      <top>0</top>
      <width>1200</width>
      <height>620</height>
      <texture border="2">dialog_bg.png</texture>
    </control>

    <!-- Barra titolo -->
    <control type="image">
      <left>0</left>
      <top>0</top>
      <width>1200</width>
      <height>80</height>
      <texture colordiffuse="FF12B2E7" border="2">white.png</texture>
    </control>

    <!-- Titolo centrale -->
    <control type="label">
      <left>0</left>
      <top>0</top>
      <width>1200</width>
      <height>80</height>
      <font>font30_title</font>
      <label>LEGGERE ATTENTAMENTE PRIMA DI CONTINUARE</label>
      <align>center</align>
      <aligny>center</aligny>
      <textcolor>FFFFFFFF</textcolor>
      <shadowcolor>FF000000</shadowcolor>
    </control>

    <!-- QR code statico (api.png) -->
    <control type="image" id="300">
      <left>40</left>
      <top>95</top>
      <width>420</width>
      <height>420</height>
      <aspectratio>keep</aspectratio>
      <texture>api.png</texture>
    </control>

    <!-- Testo descrizione a destra -->
    <control type="textbox" id="200">
      <left>480</left>
      <top>95</top>
      <width>680</width>
      <height>360</height>
      <font>font12_title</font>
      <align>left</align>
      <aligny>top</aligny>
      <textcolor>FFFFFFFF</textcolor>
      <shadowcolor>FF000000</shadowcolor>
    </control>

    <!-- Pulsante "Visualizza QR Code/Link" -->
    <control type="button" id="400">
      <left>480</left>
      <top>520</top>
      <width>360</width>
      <height>60</height>
      <font>font14_title</font>
      <label>Visualizza QR Code/Link</label>
      <align>center</align>
      <aligny>center</aligny>
      <textoffsetx>0</textoffsetx>
      <textoffsety>0</textoffsety>
      <textcolor>FFFFFFFF</textcolor>
      <texturefocus border="40" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
      <texturenofocus border="40">button-nofocus.png</texturenofocus>
    </control>

    <!-- Pulsante "Ho preso visione, continua." -->
    <control type="button" id="500">
      <left>860</left>
      <top>520</top>
      <width>300</width>
      <height>60</height>
      <font>font14_title</font>
      <label>Ho preso visione, continua.</label>
      <align>center</align>
      <aligny>center</aligny>
      <textoffsetx>0</textoffsetx>
      <textoffsety>0</textoffsety>
      <textcolor>FFFFFFFF</textcolor>
      <texturefocus border="40" colordiffuse="FF12B2E7">button-focus.png</texturefocus>
      <texturenofocus border="40">button-nofocus.png</texturenofocus>
    </control>

  </controls>
</window>
